void setup() {
  // put your setup code here, to run once:
  pinMode(3, OUTPUT);
}

void loop() {
  // put your main code here, to run repeatedly:
  digitalWrite(3, HIGH);
  /*
   * 500 - 1490 useconds will turn motor in reverse
   * 1510 - 2500 useconds will turn motor forward
   */
  delayMicroseconds(2500);
  digitalWrite(3, LOW);
}